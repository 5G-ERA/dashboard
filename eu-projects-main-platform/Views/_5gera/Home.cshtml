<div class="row">
    <div class="col-12 titlepage headtitle">
        @ViewData["Title"]
    </div>
</div>

<div class="row">
    <div class="col-xl-9 stretch-card grid-margin">
        <div class="card">
            <div class="card-body">

                <div class="row">
                    <div class="col-xl-6">
                        <div class="graph1">
                           
                        </div>
                    </div>
                    <div class="col-xl-6">
                        <div class="graph2">
                            
                        </div>
                        <div class="row">
