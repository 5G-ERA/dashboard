@{
    ViewData["Title"] = "Home > Forecasts";
}

<div class="row">
    <div class="titlepage headtitle">
        @ViewData["Title"]
    </div>
</div>  






<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item" role="presentation">
    <button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#tab1" type="button" role="tab" aria-controls="tab1" aria-selected="true">Period Warehouse</button>
  </li>
</ul>

@*tab contents*@
<div class="tab-content" id="myTabContent">

    @*tab1*@
    <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="home-tab" style="margin-top:0px">

          @*dropdown *@
        <div class="row">
                            <div class="col-xl-12 stretch-card grid-margin">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="networkRoutesDropdown row">
                                        </div>
                                    </div>
                                </div>
                            </div>
        </div>

                @*table*@
        <div class="row WarehouseTablearea" style="display:none;">
            <div class="col-xl-12 stretch-card grid-margin">
                <div class="card">
                    <div class="card-body row">
                        
                        @*table-content*@
                        <div class="table-responsive col-12">
                            <table id="WarehouseTable">
                            </table>
                        </div>

                    </div>
                </div>
            </div>
        </div>


        <div id="ContainerGraph" class="row">
            <div class="col-xl-6 stretch-card grid-margin Charts" style="display:none">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <label style="text-align:center;"> Temperature</label>
                            <div class="currentTemperatureGraphArea col-12">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 stretch-card grid-margin Charts" style="display:none">
                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <label style="text-align:center;"> Humidity</label>
                            <div class="currentHumidityGraphArea col-12">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 stretch-card grid-margin Charts" style="display:none">
                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <div class="temperaturePerTimeGraphArea col-12">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 stretch-card grid-margin Charts" style="display:none">
                <div class="card">
                    <div class="card-body">

                        <div class="row">
                            <div class="humidityPerTimeGraphArea col-12">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

</div>
