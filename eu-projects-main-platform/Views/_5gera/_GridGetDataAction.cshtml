@using eu_projects_main_platform.Models._5gera

@model IEnumerable<EditAction>

@inject IHttpClientFactory _clientFactory

@{
    ViewData["Title"] = "Actions";
}
<table class="table" id="action">
    <thead>
        <tr>
            <th>
                Task Name
            </th>
            <th>
                Action Priority
            </th>
            <th>
                Action Status
            </th>
            <th>
                Services
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Name)
                    </td>
                        <td>
                    @Html.DisplayFor(modelItem => item.ActionPriority)
                        </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActionStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Services)
                </td>
                    <td>
                        <a asp-action="EditAction" asp-route-id="@item.Id" class="btn btn-sm btn-info">Edit</a> |
                    @*<a asp-action="Details" asp-route-id="@item.name" class="btn btn-sm btn-primary ml-1">Details</a> |*@
                    <a asp-action="DeleteAction" asp-route-id="@item.Id" class="btn btn-sm btn-danger ml-1">Delete</a>
                    </td>

                </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#action').DataTable();
    })
</script>

