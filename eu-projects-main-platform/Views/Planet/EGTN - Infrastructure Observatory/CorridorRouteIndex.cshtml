@{
    ViewData["Title"] = "Home > EGTN - Infrastructure Observatory > Corridor/ Route index";
}

<div class="row">
    <div class="titlepage headtitle">
        @ViewData["Title"]
    </div>
</div>






<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="tab1-o" data-bs-toggle="tab" data-bs-target="#tab1" type="button" role="tab" aria-controls="tab1" aria-selected="true">Corridor</button>
    </li>

    <li class="nav-item" role="presentation">
        <button class="nav-link" id="tab2-o" data-bs-toggle="tab" data-bs-target="#tab2" type="button" role="tab" aria-controls="tab2" aria-selected="false">Node</button>
    </li>
</ul>

@*tab contents*@
<div class="tab-content" id="myTabContent">

    @*tab1*@
    <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1" style="margin-top:0px">


        @*table*@
        <div id="corridorTable">
            <div class="row CorridorTablearea" style="display:none;">
                <div class="col-xl-12 stretch-card grid-margin">
                    <div class="card">
                        <div class="row advancedSearchContainer" id="advancedSearchContainer-Corridor-Table" style="display:none"> </div>

                        <div class="card-body row">

                            @*table-content*@
                            <div class="table-responsive col-12">
                                <table id="Corridor-Table">
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

    <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2" style="margin-top:0px">


        <div class="row">
            <div class="col-xl-12 stretch-card grid-margin">
                <div class="card">
                    <div class="card-body">
                        <div class="nodeTableDropdown row">
                        </div>
                    </div>
                </div>
            </div>
        </div>


        @*table*@
        <div id="nodeTable">
            <div class="row corrNodeTablearea" style="display:none;">
                <div class="col-xl-12 stretch-card grid-margin">
                    <div class="card">
                        <div class="card-body row">

                            @*table-content*@
                            <div class="table-responsive col-12">
                                <table id="Corridor-Node-Table">
                                </table>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        @*graphs*@
        <div id="ContainerGraph" class="row">
        </div>

    </div>

</div>

