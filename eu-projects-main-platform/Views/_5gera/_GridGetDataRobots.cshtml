@using eu_projects_main_platform.Models._5gera

@model IEnumerable<RobotData>

@{
    ViewData["Title"] = "Robots";
}
<table class="table" id="robots">
    <thead>
        <tr>
            <th>
                Robot ID
            </th>
            <th>
                Robot Name
            </th>
            <th>
                Status
            </th>
            <th>
                Date Onboarded
            </th>
            <th>
                ROS Version
            </th>
            <th>
                ROS Distro
            </th>
            <th>
                Manufacturer
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.onboardedTime.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rosVersion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rosDistro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.manufacturer)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-sm btn-info">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-sm btn-danger ml-1">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#robots').DataTable();
    })
</script>

