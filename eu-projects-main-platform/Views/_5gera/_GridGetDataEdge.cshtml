@using eu_projects_main_platform.Models._5gera

@model IEnumerable<EditEdge>


@{
    ViewData["Title"] = "Edge";
}

<table class="table" id="edge">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Status
            </th>
            <th>
                Online
            </th>
            <th>
                Number Of Running Containers
            </th>
            <th>
                Last Updated Time
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.edgeStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isOnline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.numberOfCores)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastUpdatedTime.Date)
                </td>
                <td>
                    <a asp-action="EditEdge" asp-route-id="@item.id" class="btn btn-sm btn-info">Edit</a> |
                    <a asp-action="DeleteEdge" asp-route-id="@item.id" class="btn btn-sm btn-danger ml-1">Delete</a>
                </td>


            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#edge').DataTable();
    })
</script>

