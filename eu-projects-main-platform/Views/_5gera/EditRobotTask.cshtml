            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="FullReplan" /> @Html.DisplayNameFor(model => model.FullReplan)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PartialRePlan" /> @Html.DisplayNameFor(model => model.PartialRePlan)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="DeterministicTask" /> @Html.DisplayNameFor(model => model.DeterministicTask)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MarkovianProcess" /> @Html.DisplayNameFor(model => model.MarkovianProcess)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            <div class="form-group">
                <button type="button" class="btn btn-dark"><a asp-controller="Home" asp-action="Index" style="color:white">Back</a></button>
            </div>
        </form>
    </div>
</div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

