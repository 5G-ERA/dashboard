@using eu_projects_main_platform.Models._5gera

@model IEnumerable<EditCloud>


@{
    ViewData["Title"] = "Cloud";
}
<div>
    <h3>@ViewData["Title"]</h3>
    @*<p>
        <a href="#" class="btn btn-sm btn-success ml-1" onclick="AddCloud('')">Create</a>
    </p>*@
</div>
<table class="table" id="cloud">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Status
            </th>
            <th>
                Online
            </th>
            <th>
                Number Of Running Containers
            </th>
            <th>
                Last Updated Time
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cloudStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isOnline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.numberOfCores)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastUpdatedTime)
                </td>
                    <td>
                        <a asp-action="EditCloud" asp-route-id="@item.id" class="btn btn-sm btn-info">Edit</a> |
                        <a asp-action="DeleteCloud" asp-route-id="@item.id" class="btn btn-sm btn-danger ml-1">Delete</a>
                    </td>
                
                @*<td>
                    @Html.ActionLink("Edit", "Edit", new {id= item.name}) |
                    @Html.ActionLink("Details", "Details", new {id= item.name}) |
                    @Html.ActionLink("Delete", "Delete", new {id= item.name})
                </td>*@
                
            </tr>
        }
    </tbody>
</table>
